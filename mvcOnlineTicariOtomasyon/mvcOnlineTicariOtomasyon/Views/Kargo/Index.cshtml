@using mvcOnlineTicariOtomasyon.Models.Classes
@model List<KargoDetay>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1 class="h3 mb-0 text-gray-800">Kargolar</h1>
<br />


<table id="tbl21" class="table table-striped">
    <thead>
        <tr>
            <th>Personel</th>
            <th>Alıcı</th>
            <th>Takip Kodu</th>
            <th>Tarih</th>
            <th>Detay</th>

        </tr>
    </thead>

    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Personelid</td>
            <td>@k.Alici</td>
            <td>@k.TakipKodu</td>
            <td>@k.tarih</td>
            <td>
                <a href="/Kargo/KargoTakip/@k.TakipKodu" class="btn btn-group"
                   style="background-color: #35B8FF; color: white; ">Detaylar</a>
            </td>
        </tr>
    }

</table>
<a href="/Kargo/YeniKargo" class="btn btn-info">Yeni Kargo</a>
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
        Kargo takip numarası: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}



