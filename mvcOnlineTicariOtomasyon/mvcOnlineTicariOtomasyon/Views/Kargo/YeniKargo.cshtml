@model mvcOnlineTicariOtomasyon.Models.Classes.KargoDetay
@{
    ViewBag.Title = "YeniKargo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1 class="h3 mb-0 text-gray-800">Kargo Bilgileri Sayfası</h1>
<br />
<form class="form-group" method="post">
    @Html.Label("Takip Kodu")
    <input type="text" value="@ViewBag.takipkodu" class="form-control" readonly name="TakipKodu" />
    </br>
    @Html.Label("Personel")
    @Html.DropDownListFor(x => x.Personelid, (List<SelectListItem>)ViewBag.dgr2, new
  {
          @class = "form-control"
  })
    </ br >
    @Html.Label("Alıcı")
    @Html.TextBoxFor(x => x.Alici, new { @class = "form-control" })@*lamda operation*@
    </ br >
    @Html.Label("Açıklama")
    @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" }) @*lamda operation*@
    </br>
    @Html.Label("Tarih")
    <input class="form-control" type="date" name="Tarih" />
    </br>

    <button class="btn btn-info">Kaydet</button>
</form>