@using mvcOnlineTicariOtomasyon.Models.Classes
@model  List<SatisHareketi>
@{
    ViewBag.Title = "SatisDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3 mb-0 text-gray-800">Satış Detay Sayfası</h1>
<br />
<table class="table table-hover">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam Tutar</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.SatisID</td>
            <td>@x.Urunler.UrunAdi</td>
            <td>@x.Cari.CariAd @x.Cari.CariSoyad</td>
            <td>@x.Personel.PersonelAd @x.Personel.PersonelSoyad</td>
            <td>@x.Adet</td>
            <td>@x.Fiyat ₺</td>
            <td>@x.ToplamTutar ₺</td>
            <td>@x.Tarih</td>
            <td><a href="#" class="btn btn-default" style="background-color: #708EE9; color: white ">Yazdır</a></td>
        </tr>

    }


</table>

