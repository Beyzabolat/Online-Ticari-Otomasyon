@using mvcOnlineTicariOtomasyon.Models.Classes
@model List<KargoTakip>


@{
    ViewBag.Title = "CariKargoTakip";
    Layout = "~/Views/Shared/_carilayout.cshtml";
}

<h2>CariKargoTakip</h2>
<h1 class="h3 mb-0 text-gray-800">Kargolar</h1>
<br />


<table id="tbl21" class="table table-striped">
    <thead>
        <tr>
            <th>Alıcı</th>
            <th>Takip Kodu</th>
            <th>Tarih</th>
            <th>Detay</th>

        </tr>
    </thead>

    @foreach (var k in Model)
    {
        <tr>
            <td>@k.KargoTakipID</td>
            <td>@k.TakipKodu</td>
            <td>@k.Aciklama</td>
            <td>@k.tarihzaman</td>
            <td>
                <a href="/caripanel/CariKargoTakip/@k.TakipKodu" class="btn btn-group"
                   style="background-color: #35B8FF; color: white; ">Detaylar</a>
            </td>
        </tr>
    }

</table>

@using (Html.BeginForm("KargoTakip", "caripanel", FormMethod.Get))
{
    <p>
        Kargo takip numarası: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}



