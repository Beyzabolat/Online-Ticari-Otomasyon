@using mvcOnlineTicariOtomasyon.Models.Classes
@model List<Cari>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="h3 mb-0 text-gray-800">Cariler</h1>
<br />
<table class="table table-striped">
    <tr>
        <th>Cari ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>

    </tr>

    @foreach (var b in Model)
    {
        <tr>
            <td>@b.CariID</td>
            <td>@b.CariAd</td>
            <td>@b.CariSoyad</td>
            <td>@b.CariSehir</td>
            <td>@b.CariMail</td>
            <td><a href="/Cari/CariSilme/@b.CariID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Cari/CariGetirme/@b.CariID" class="btn btn-success">Güncelle</a></td>
            <td>
                <a href="/Cari/MusteriSatis/@b.CariID" class="btn btn-group"
                   style="background-color: #FFC046; color: white;">Satış Geçmişi</a>
            </td>

        </tr>
    }
</table>
