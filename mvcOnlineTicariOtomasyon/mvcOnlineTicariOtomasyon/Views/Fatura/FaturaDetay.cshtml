@using mvcOnlineTicariOtomasyon.Models.Classes
@model  List<FaturaKalem>


@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="h3 mb-0 text-gray-800">Fatura Kalemleri Sayfası</h1>
<br />
<table class="table table-hover">
    <tr>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Toplam Tutar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Aciklama</td>
            <td>@x.Miktar</td>
            <td>@x.Birimfiyat ₺</td>
            <td>@x.Tutar ₺</td>

        </tr>

    }


</table>

<a href="/Fatura/KalemEkleme/" class="btn btn-info">Yeni Kalem</a>