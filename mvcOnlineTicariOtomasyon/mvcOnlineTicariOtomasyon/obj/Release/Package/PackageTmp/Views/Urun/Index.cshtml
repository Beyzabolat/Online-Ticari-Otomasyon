@using mvcOnlineTicariOtomasyon.Models.Classes;
@model List<Urunler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="h3 mb-0 text-gray-800">Ürünler</h1>
<br />
<table id="tbl4" class="table table-striped">
    <thead>
        <tr>
            <th>Ürün</th>
            <th>Marka</th>
            <th>Stok</th>
            <th>Alış Fiyat</th>
            <th>Satış Fiyat</th>
            <th>Kategori</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Satış Yap</th>

        </tr>
    </thead>

    @foreach (var m in Model)
    {
        <tr>
            <td>@m.UrunAdi</td>
            <td>@m.Marka</td>
            <td>@m.Stok</td>
            <td>@m.AlisFiyati ₺</td>
            <td>@m.SatisFiyati ₺</td>
            <td>@m.Kategori.KategoriAd</td>
            <td>
                <a href="/Urun/UrunSilme/@m.UrunID" class="btn btn-danger">Sil</a>
            </td>
            <td><a href="/Urun/UrunGetirme/@m.UrunID" class="btn btn-success">Güncelle</a></td> 
            <td><a href="/Urun/SatisYap/@m.UrunID" class="btn btn-primary">Satış Yap</a></td>

        </tr>

    }


</table>


