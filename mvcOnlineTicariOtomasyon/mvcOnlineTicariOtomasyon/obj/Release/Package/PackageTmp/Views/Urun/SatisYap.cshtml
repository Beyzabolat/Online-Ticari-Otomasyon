@model mvcOnlineTicariOtomasyon.Models.Classes.SatisHareketi

@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/jqeury/jqeury/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<br />
<h1 class="h3 mb-0 text-gray-800">Yeni Satış Sayfası</h1>
<br />
<form class="form-group" method="post">

    @Html.Label("Ürün ID")
    <input type="text" name="UrunID" value="@ViewBag.dgr1" class="form-control" readonly />
    <br />
    @Html.Label("Personel")
    @Html.DropDownListFor(x => x.Personelid, (List<SelectListItem>)ViewBag.dgr2, new
{
@class = "form-control"
})
    <br />

    @Html.Label("Cari")
    @Html.DropDownListFor(x => x.Cariid, (List<SelectListItem>)ViewBag.dgr4, new
{
@class = "form-control"
})
    <br />

    @Html.LabelFor(x => x.Adet)
    <input type="number" class="form-control" max="10" min="1" placeholder="Lütfen adet girin." id="txt1"
           onchange="sum()" name="Adet" />
    <br />

    @Html.LabelFor(x => x.Fiyat)
    <input type="text" name="Fiyat" value="@ViewBag.dgr3" class="form-control" id="txt2"
           onkeyup="sum()" />
    <br />

    @Html.Label("Toplam Tutar")
    <input type="text" name="ToplamTutar" value="0" class="form-control" id="txt3" readonly />
    <br />

    <br />
    <button class="btn btn-info">Satış Yap</button>
</form>
<br />
<script>
    function sum() {

        const num1 = document.getElementById('txt1').value;
        const num2 = document.getElementById('txt2').value;
        const sonuc = parseInt(num1) * parseInt(num2);
        if (!isNaN(sonuc)) {
            document.getElementById('txt3').value = sonuc.toString();

        }
    }
</script>