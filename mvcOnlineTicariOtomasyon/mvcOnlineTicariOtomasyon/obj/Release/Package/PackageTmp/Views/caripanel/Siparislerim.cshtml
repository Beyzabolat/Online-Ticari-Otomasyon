@using mvcOnlineTicariOtomasyon.Models.Classes
@model List<SatisHareketi>
@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared/_carilayout.cshtml";
}
<br />
<h2>Sipariş Geçmişim</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>Ürün Adı</th>
        <th>Fiyat</th>
        <th>Tarih</th>
    </tr>
    @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Urunler.UrunAdi</td>
                    <td>@x.Fiyat</td>
                    <td>@Convert.ToDateTime(x.Tarih).ToString("dd/MM/yyyy")</td>
                </tr>
            }
</table>


