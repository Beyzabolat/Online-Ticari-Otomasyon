@using mvcOnlineTicariOtomasyon.Models.Classes
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h1 class="h3 mb-0 text-gray-800">Personeller</h1>
<br />
<table id="tbl2" class="table table-striped">
    <thead>

    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Personel Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>

    </tr>
    </thead>
    @foreach (var b in Model)
    {
        <tr>
            <td>@b.PersonelID</td>
            <td>@b.PersonelAd</td>
            <td>@b.PersonelSoyad</td>
            <td>
                <img src="@b.PersonelGorsel" style="width:100px; height=100px"/>

            </td>
            <td>@b.Departman.DepartmanAd</td>
            <td><a href="/Personel/PersonelGetirme/@b.PersonelID" class="btn btn-success">Güncelle</a></td>
            <td>
                <a href="/Departman/DepartmanPersonelSatis/@b.PersonelID" class="btn btn-group"
                   style="background-color: #35B8FF; color: white; ">Detaylar</a>
            </td>
        </tr>
    }

</table>

<link href="~/websitesi/css/sb-admin-2.min.css" rel="stylesheet">
