@model mvcOnlineTicariOtomasyon.Models.Classes.Cari
@{
    ViewBag.Title = "CariEkleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3 mb-0 text-gray-800">Yeni Cari Ekleme Sayfası</h1>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.CariAd)
    @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })    @*lamda operation*@
    <br />
    @Html.LabelFor(x => x.CariSoyad)
    @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })    @*lamda operation*@
    <br />
    @Html.LabelFor(x => x.CariMail)
    @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })    @*lamda operation*@
    <br />
    @Html.LabelFor(x => x.CariSehir)
    @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })    @*lamda operation*@
    <br />
   
    <button class="btn btn-info">Kaydet</button>
</form>

